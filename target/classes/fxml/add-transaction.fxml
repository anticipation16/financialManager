<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="569.0" prefWidth="752.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.finman.controllers.TransactionFormController">
    <children>
        <GridPane gridLinesVisible="true" layoutX="88.0" layoutY="142.0" prefHeight="208.0" prefWidth="467.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="253.0" minWidth="5.0" prefWidth="209.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="287.0" minWidth="10.0" prefWidth="258.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Choose Transaction Category" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Enter Amount" GridPane.halignment="LEFT" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Enter Account Number" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="20.0"/>
                    </GridPane.margin>
                </Label>
                <TextField fx:id="transaction_amount" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="transaction_account_number" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <ChoiceBox fx:id="transaction_category" prefHeight="26.0" prefWidth="259.0" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <Button fx:id="addNewTransactionButton" layoutX="420.0" layoutY="379.0" mnemonicParsing="false"
                onAction="#handleAddNewTransaction" prefHeight="45.0" prefWidth="135.0" text="Add New Transaction"/>
        <Label layoutX="562.0" layoutY="167.0" text="Can't see your category? "/>
        <Button layoutX="562.0" layoutY="184.0" mnemonicParsing="false" onAction="#handleAddNewCategory"
                text="Add New Category"/>
    </children>
</AnchorPane>
